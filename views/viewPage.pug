doctype html
html 
  head
    title="Log Entry"
    link(rel="stylesheet" href="style.css")
  body.entry
    a.desk(href="/home") 
      button Back to the Desktop!
    h1(style="color:blue;position:relative;width:50vw;margin:auto;text-align:center") !{heading}
    hr
    br
    p !{text}

    textarea(name="comment" form="input" autofocus)
    form(action=!{heading}, method="POST" id="input")
      button(type="submit")
        p submit
